<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
         id="WebApp_ID" version="2.5">
    <display-name>Vaadin Web Application</display-name>
    <context-param>
        <description>Vaadin production mode</description>
        <param-name>productionMode</param-name>
        <param-value>true</param-value>
    </context-param>

    <servlet>
        <servlet-name>Navigator</servlet-name>
        <servlet-class>com.vaadin.server.VaadinServlet</servlet-class>
        <init-param>
            <description>Vaadin UI to display</description>
            <param-name>UI</param-name>
            <param-value>com.haulmont.testtask.ui.NavigatorUI</param-value>
        </init-param>
    </servlet>
    <servlet>
        <servlet-name>Genres</servlet-name>
        <servlet-class>com.vaadin.server.VaadinServlet</servlet-class>
        <init-param>
            <description>Vaadin UI to display</description>
            <param-name>UI</param-name>
            <param-value>com.haulmont.testtask.ui.genre.GenreView</param-value>
        </init-param>
    </servlet>
    <servlet>
        <servlet-name>Authors</servlet-name>
        <servlet-class>com.vaadin.server.VaadinServlet</servlet-class>
        <init-param>
            <description>Vaadin UI to display</description>
            <param-name>UI</param-name>
            <param-value>com.haulmont.testtask.ui.author.AuthorView</param-value>
        </init-param>
    </servlet>
    <servlet>
        <servlet-name>Books</servlet-name>
        <servlet-class>com.vaadin.server.VaadinServlet</servlet-class>
        <init-param>
            <description>Vaadin UI to display</description>
            <param-name>UI</param-name>
            <param-value>com.haulmont.testtask.ui.book.BookView</param-value>
        </init-param>
    </servlet>

    <servlet-mapping>
        <servlet-name>Navigator</servlet-name>
        <url-pattern>/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Genres</servlet-name>
        <url-pattern>/genres</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Authors</servlet-name>
        <url-pattern>/authors</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Books</servlet-name>
        <url-pattern>/books</url-pattern>
    </servlet-mapping>
</web-app>